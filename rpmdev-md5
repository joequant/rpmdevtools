name="$(basename $0)"
csum="${name##rpmdev-}"
csum="${csum%%sum}"

while test "$1"; do
    case "$1" in
	--help)		echo $"Usage: $name <package-file>"; exit 0;;
	--version)	echo $"$name 0.6"; exit 0;;
	--)		shift; break;;
	*)		break
    esac
    shift
done

test "$1" || {
    echo $"No package specified; use '--help' for more information"
    exit 1
}


unset CDPATH
tmp=`mktemp -d ${TMPDIR:-/tmp}/"$name.XXXXXX"`
trap "rm -rf '$tmp'" EXIT

rpm2cpio - <"$1" | ( cd "$tmp"; cpio -i --quiet )

cd -- `dirname -- "$1"`
"${csum}sum" -- `basename -- "$1"`

cd "$tmp"
"${csum}sum" *
