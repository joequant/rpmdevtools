unset CDPATH

owner=
if [ "$1" = "-l" ] ; then
    owner='%-8{fileusername} %-8{filegroupname} '
    shift
fi
qf="[%-11{filemodes:perms} $owner%{filenames}\\n]"

for arg in "$@" ; do
    case "$arg" in
        *.[rs]pm)
            # dirname/basename: workaround for #250990
            cd "$(dirname "$arg")"
            rpm -qp --qf="$qf" "$(basename "$arg")"
            cd - >/dev/null 2>&1
            ;;
        *)
            rpm -q --qf="$qf" "$arg"
    esac
done
